<div class="container-fluid section-start created" >

  <div class="form-align">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "middle-screen"}) do |f| %>
    <%= devise_error_messages! %>

    <h2 class="middle-screen">Please register</h2>

    <div class="field form-group">
      <!--<%= f.label :email %><br />-->
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Enter Email" %>
    </div>

    <div class="field form-group">
      <!--<%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />-->
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Enter New Password - 6 char. minimum" %>
    </div>

    <div class="field form-group">
      <!--<%= f.label :password_confirmation %><br />-->
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Confirm New Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Register", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>
  <%= render "devise/shared/links" %>
</div>
