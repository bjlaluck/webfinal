<div class="container-fluid section-start" >



    <h1>Users</h1>

    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= link_to 'Show', user, class: "btn btn-success bottom-link" %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-info bottom-link" %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New User', edit_user_path(@users) %>
</div>
